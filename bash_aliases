###  MY ALIASES ###

# sudo
alias sudo='sudo '

# docker
alias dockerS='sudo systemctl start docker' # start Docker

# tools
alias publicIP='curl https://ipinfo.io/ip' # public ip address
alias timenow='date +"%T"' # current time in 24hrs format as HH:MM:SS
alias datenow='date +"%d-%m-%Y"' # current date in format dd-MM-YY
alias update='sudo apt-get update && sudo apt-get upgrade' # update on one command

# ls
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# open file or url from terminal in default application
alias open='xdg-open'

